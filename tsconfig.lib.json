{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/dts",
    "baseUrl": "src/lib",
    "paths": {
      "lib/*": ["./*"],
      "abis/*": ["../abis/*"],
      "assets/*": ["../assets/*"],
      "constants/*": ["../constants/*"],
      "hooks/*": ["../hooks/*"],
      "state/*": ["../state/*"],
      "types/*": ["../types/*"],
      "utils/*": ["../utils/*"],
    },
  },
  "exclude": ["node_modules", "src/lib/**/*.test.*"],
  "include": ["src/lib/**/*"]
}
