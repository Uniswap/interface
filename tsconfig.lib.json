{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dts",
    "baseUrl": "src/lib",
    "paths": {
      "lib/*": ["./*"],
      "abis/*": ["../abis/*"],
      "assets/*": ["../assets/*"],
      "constants/*": ["../constants/*"],
      "hooks/*": ["../hooks/*"],
      "locales/*": ["../locales/*"],
      "state/*": ["../state/*"],
      "types/*": ["../types/*"],
      "utils/*": ["../utils/*"]
    }
  },
  "exclude": ["node_modules", "src/**/*.test.*"],
  "include": ["src/lib/**/*.d.ts", "src/lib/index.tsx"]
}
