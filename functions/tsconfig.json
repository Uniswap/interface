{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "strict": true,
    "target": "ES6",
    "tsBuildInfoFile": "../node_modules/.cache/tsbuildinfo/jest", // avoid clobbering the build tsbuildinfo
    "types": ["jest", "node"],
    "jsx": "react",
    "moduleResolution": "NodeNext",
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "global.d.ts"],
  "watchOptions": {
    "excludeDirectories": ["node_modules"]
  }
}