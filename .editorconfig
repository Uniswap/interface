# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single

[*.{ts,tsx}]

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Windows files
[*.bat]
end_of_line = crlf
