{
  "baseBranch": "origin/main",
  "pipeline": {
    "typecheck": {
      "inputs": [
        "{packages,apps,config}/*+(.ts|.tsx)"
      ],
      "outputs": []
    },
    "check:circular": {},
    "lint": {},
    "lint:fix": {},
    "//#staged:lint:fix": {
      "outputs": []
    },
    "//#staged:format": {
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "typecheck",
        "lint"
      ]
    },
    "snapshots": {
      "dependsOn": [
        "typecheck",
        "lint"
      ]
    },
    "build": {
      "inputs": [
        "yarn.lock",
        "**/package.json",
        "{packages,apps}/*+(.ts|.tsx)"
      ],
      "outputs": [
        "**/dist/**",
        "./apps/next/.next/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "storybook#build": {
      "dependsOn": [
        "ui#build"
      ],
      "inputs": [
        "packages/ui/**"
      ],
      "outputs": [
        "apps/storybook/dist/**"
      ]
    }
  }
}
