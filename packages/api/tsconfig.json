{
  "extends": "../../config/tsconfig/app.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.spec.tsx", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "types": ["chrome", "node"],
    "baseUrl": ".",
    "paths": {
      "@universe/api/*": ["./src/*"]
    }
  },
  "types": ["vitest/globals"],
  "references": [
    {
      "path": "../utilities"
    },
    {
      "path": "../sessions"
    },
    {
      "path": "../config"
    }
  ]
}
