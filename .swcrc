{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "keepClassNames": true,
    "experimental": {
      "plugins": [
        [
          // https://lingui.dev/ref/swc-plugin#usage
          "@lingui/swc-plugin",
          {}
        ],
        [
          "@swc/plugin-styled-components",
          {
            "displayName": true
          }
        ]
      ]
    },
    "parser": {
      "syntax": "typescript",
      "tsx": true
    },
    "transform": {
      "react": {
        "runtime": "automatic"
      }
    }
  }
}
