{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "strict": true,
    "target": "ES5",
    "tsBuildInfoFile": "../node_modules/.cache/tsbuildinfo/cypress", // avoid clobbering the build tsbuildinfo
    "types": ["cypress", "node"],
    "jsx": "react"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"],
  "watchOptions": {
    "excludeDirectories": ["node_modules"]
  }
}
